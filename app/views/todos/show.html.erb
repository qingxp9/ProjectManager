<h2>任务:<%= @todo.goal %></h2>
<p>负责人: <%= @todo.user ? @todo.user.email : "未指派" %></p>
<%= form_for([@project,@todo]) do |f| %>
  <%= f.text_field :user_id %>
  <%= f.submit "更改指派"%>
<% end %>
<p>
限制时间:<%= @todo.limit_time %>
  <%= form_for @todo, url: {action: "change_limit_time"} do |f| %>
    <%= datetime_select :todo, :limit_time %>
    <%=  f.submit "更改"%>
  <% end %>

</p>
<p>
  任务状态:
  <% if @todo.status %>
    完成
  <% else %>
    未完成
    <%= form_tag({controller: "todos", action: "edit_status"}, method: "get") do %>
      <%= submit_tag "完成" %>
    <% end %>
  <% end %>
</p>

<hr/>

<h4>评论: </h4>
<%= render @todo.comments %>

<hr/>

<h4>添加评论</h4>
<%= render "comments/form" %>

<hr/>

<p> 
  <%= link_to 'Back', project_path(@project) %>
  | <%= link_to 'Edit', edit_project_todo_path(@project,@todo) %>
</p>
<p>
<%= link_to 'Destroy', project_todo_path(@project,@todo),
                   method: :delete,
                   data: { confirm: 'Are you sure?' } %>
</p>

